<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="130.0" prefWidth="465.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainWindowController">
    <center>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0">
            <ComboBox id="conversionTypeSelector" minWidth="200" prefHeight="26.0" prefWidth="280.0" promptText="Type of Conversion">
                <opaqueInsets>
                    <Insets />
                </opaqueInsets></ComboBox>
            <HBox alignment="CENTER">
                <VBox style="-fx-padding: 10;">
                    <ComboBox id="conversionLeftSelector" disable="true" minWidth="200" promptText="Select Measurement" />
               <TextField id="conversionLeftText" disable="true" promptText="Please Select a Conversion">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor></TextField>
                </VBox>
            <SVGPath id="conversionArrow" content="M0,10L10,0,10,20 M10,9 L20,9,20,11,10,11 M30,10L20,0,20,20" fill="#00000080" />
                <VBox style="-fx-padding: 10;">
                    <ComboBox id="conversionRightSelector" disable="true" minWidth="200" promptText="Select Measurement" />
               <TextField id="conversionRightText" disable="true" promptText="Please Select a Conversion">
                  <cursor>
                     <Cursor fx:constant="TEXT" />
                  </cursor></TextField>
                </VBox>
            </HBox>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>
    </center>
   <top>
      <Label text="Measurement Converter" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
   </top>


</BorderPane>
